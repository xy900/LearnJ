<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- 全局配置参数 -->
	<settings>
		<!-- 是否延迟加载  所有关联对象都会延迟加载-->
		<setting name="lazyLoadingEnabled" value="true" />
		<!-- 是否开启二级缓存 -->
		<setting name="cacheEnabled" value="false"/>
		<!-- 打印日志 -->
		<setting name="logImpl" value="STDOUT_LOGGING"/>	<!--为指定时自动查找SLF4J, COMMONS_LOGGING, STDOUT_LOGGING, NO_LOGGING-->
	</settings>
	
	<!-- 定义别名 -->
	<typeAliases>
 		<typeAlias alias="TestEntity" type="com.cms.entity.TestEntity"/> 
	</typeAliases>
</configuration>  

